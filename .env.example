# Algo Trading Bot Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATA SOURCES
# =============================================================================

# Databento API key (required for market data)
# Get your key at: https://databento.com
DATABENTO_API_KEY=db-your-api-key-here

# Databento dataset (default: GLBX.MDP3 for CME futures)
DATABENTO_DATASET=GLBX.MDP3

# =============================================================================
# INTERACTIVE BROKERS
# =============================================================================

# TWS/Gateway connection settings
IB_HOST=127.0.0.1

# Port configuration:
# - TWS Paper Trading: 7497
# - TWS Live Trading: 7496
# - IB Gateway Paper: 4002
# - IB Gateway Live: 4001
IB_PORT=7497

# Unique client ID (increment if running multiple instances)
IB_CLIENT_ID=1

# IB Account ID (optional, auto-detected if not set)
# IB_ACCOUNT=DU123456

# =============================================================================
# TRADING PARAMETERS
# =============================================================================

# Symbol and exchange (MCL = Micro WTI Crude Oil)
SYMBOL=MCL
EXCHANGE=NYMEX

# Contract specifications (MCL = 100 barrels, CL = 1000 barrels)
CONTRACT_MULTIPLIER=100
TICK_SIZE=0.01

# Default Databento schema: ohlcv-1m, ohlcv-1s, mbp-1, mbp-10, trades
DEFAULT_SCHEMA=ohlcv-1m

# =============================================================================
# RISK MANAGEMENT
# =============================================================================

# Maximum contracts per position
MAX_POSITION_CONTRACTS=5

# Risk per trade as fraction of equity (0.02 = 2%)
RISK_PER_TRADE=0.02

# Daily loss limit as fraction of equity (0.05 = 5%)
DAILY_LOSS_LIMIT=0.05

# Starting capital in USD (testing with $1,000-$5,000)
INITIAL_CAPITAL=5000

# =============================================================================
# STRATEGY PARAMETERS
# =============================================================================

# EMA periods for momentum strategy
FAST_PERIOD=20
SLOW_PERIOD=50

# ATR period for volatility calculation
ATR_PERIOD=14

# =============================================================================
# ENVIRONMENT
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Runtime environment: development, paper, production
ENVIRONMENT=development

# Data storage directories
DATA_DIR=data
LOG_DIR=logs
